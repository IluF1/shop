model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    role     Role   @default(USER)
    login    String @unique
    name     String
    password String
    avatar   String @default("https://i.pinimg.com/564x/08/7d/46/087d46ee14dc2211428f4e1b8872d206.jpg")
}

enum Role {
    USER
    ADMIN
}
